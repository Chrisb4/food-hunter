@import url(//fonts.googleapis.com/css?family=Fontdiner+Swanky);
@import url(https://fonts.googleapis.com/css?family=Special+Elite);
$colorBackground: #F9FBCC;

* {
  margin: 0;
  padding: 0;
  border: 0;
  box-sizing: border-box;
}

body {
  background-color: $colorBackground;
}

button {
  cursor: pointer;
  outline: 0;
}

.container {
  width: 100%;
  margin: 0 auto;
  overflow: auto;
  font-size: 14px;
  font-family: sans-serif;
  border: 10px;
}

.main-header {
  background: #F5F6C8 url('<%= image_path 'vintage-banner.png' %>') no-repeat center;
  margin-bottom: 35px;
  padding: 30px 0 10px 20px;
  border-bottom: 5px solid #A5AA90;
  .app-title {
    font-size: 3.2em;
    word-spacing: 6px;
    font-family: 'Fontdiner Swanky', cursive;
  }
  .caveman-logo {
    img {
      width: 80px;
      height: 85px;
      overflow: hidden;
      position: absolute;
      top: 9px;
      right: 9px;
    }
  }
}

.category-display,
.ingredient-list,
.real-time-recipe-display {
  float: left;
}

.category-display {
  width: 17%;
  padding-left: 10px;
}

.category-button {
  position: relative;
  background: #DCBA83;
  border-radius: 7px;
  color: black;
  font-size: 22px;
  font-weight: bold;
  padding: 10px;
  text-decoration: none;
  display: block;
  width: 100%;
  margin-bottom: 10px;
  &.active {
    background-color: lighten(#925A6F, 15%);
  }
}

.ingredient-counter {
  display: block;
  position: absolute;
  top: -.75em;
  right: -.75em;
  background: #EE9329;
  width: 1.5em;
  border-radius: 50%;
  height: 1.5em;
  line-height: 1.5;
  color: white;
  font-size: 12px;
}

.ingredient-button {
  padding: 5px;
  font-size: 12px;
}

.ingredient-list {
  width: 17%;
  padding-right: 25px;
  padding-left: 25px;
  padding-bottom: 1px;
  .ingredient-button {
    display: none;
    margin-bottom: 5px;
    border-radius: 3px;
    text-align: left;
    background: none;
    border-bottom: 3px solid transparent;
    width: 0px;
    transition: 0.3s ease;
    white-space: nowrap;
    height: 25px;
    &.category-selected {
      display: block;
    }
    &.selected {
      display: none;
    }
    &:hover {
      border-bottom: 3px solid #5D969A;
      width: 100%;
    }
  }
}




.real-time-recipe-display {
  width: 66%;
}
.selected-ingredients-display {
  margin-bottom: 10px;
  font-weight: bold;
  display: none;
  .ingredient-button {
    background: lighten(#9D9354, 15%);
    border-radius: 3px;
    margin-bottom: 5px;
    margin-right: 5px;
    display: none;
    &.selected {
      display: inline-block;
    }
    &::after {
      content: 'x';
      float: right;
      margin-left: 6px;
      background: darken(#9D9354, 10%);
      width: 1.4em;
      font-weight: bold;
      line-height: 1.4;
      border-radius: 50%;
      font-size: 1em;
      color: white;
    }
  }
}

.recipe {
  padding: 5px;
  overflow: auto;
  line-height: 1.3;
  margin-bottom: 6px;
  border-bottom: 1px solid darken($colorBackground, 40%);
  font-family: 'Special Elite', cursive;
  background: url('<%= image_path 'img-noise.png' %>');
  .cooking-time {
    font-size: 12px;
  }
  .image {
    border-radius: 5px;
    float: left;
    width: 100px;
    height: 100px;
    background-size: cover;
    margin-right: 10px;
    border: 2px inset #A5AA90;
  }
}

